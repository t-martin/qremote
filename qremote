#!/bin/bash

usage() {
cat << EOF
qremote: connect to remote q process
usage: qremote [-config /path/to/server/config.cfg] [-to TIMEOUT] [-c x y (CONSOLE WIDTH)] [-help]

if no config file is specified, qremote will prompt for host/port/username

a config file just contains
 host=\${HOST}
 port=\${PORT}
 user=\${USER}
EOF
}

if [[ -f $QREMOTE_HOME/qremote.q ]]; then
  qfile=$QREHOMTE_HOME/qremote.q
elif [[ -f $QHOME/qremote.q ]]; then
  qfile=$QHOME/qremote.q
elif [[ -f $(dirname $0)/qremote.q ]]; then
  qfile=$(dirname $0)/qremote.q
else
  echo 'Could not find qremote.q. qremote.q should be in $QREMOTE_HOME, $QHOME or the same directory as this script'
  exit 1
fi

while true; do
  case "$1" in
    -config)
      configfile=$2;
      shift 2;;
    -to)
      params="$params -to $2";
      shift 2;;
    -c)
      params="$params -c $2 $3";
      shift 3;;
    -h|-help)
      usage;
      exit 0;;
    --|*)
      shift;
      break;;
  esac
done

iterator=0
if [[ -z $configfile ]]; then
  read -p "host: " host
  read -p "port: " port
  read -p "user: " user
  iterator=$((iterator+3))
fi
read -s -p "password: " password

echo -en "\033[2K"
for i in $(seq $iterator); do
  echo -en "\033[1A"
  echo -en "\033[2K"
done
echo -en "\r"

rlwrap=$(which rlwrap 2>/dev/null)

[[ -n $configfile ]] && . $configfile

: ${host:=localhost}

$rlwrap q $qfile :$host:$port:$user:$password -q $params

